<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchase_new_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
            </t>
        </xpath>


        <xpath expr="//t[@t-if='o.dest_address_id']" position="replace">
        </xpath>
        <xpath expr="//t[@t-else='']" position="replace">
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="row" style="margin-bottom:50px">
                <div class="col-8">
                    <strong>Customer Details:</strong>
                    <div t-field="o.partner_id"
                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;,&quot;name&quot;,  &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    <p t-if="o.partner_id.vat">VAT IN:<span t-field="o.partner_id.vat"/></p>
                    <p t-if="o.partner_id.company_registry">C.R.<span t-field="o.partner_id.company_registry"/></p>
                    <p t-if="o.partner_id.ref">Trade License #<span t-field="o.partner_id.ref"/></p>
                    <strong><span t-if="o.partner_id.vat">Point of Contact:</span></strong><br></br>
                    <span t-if="o.partner_id.vat">Name<span t-field="o.partner_invoice_id.name"/></span><br></br>
                    <span t-if="o.partner_id.vat">Number<span t-field="o.partner_invoice_id.mobile"/></span><br></br>
                    <span t-if="o.partner_id.vat">Email<span t-field="o.partner_id.email"/></span>
                    <span t-if="o.incotercom_id">Intercoms<span t-field="o.incotercom_id.name"/></span>
                </div>
                <div class="col-4">
                    <h5>
                        <span t-if="o.state not in ['draft','sent']">Purchase Order #</span>
                        <span t-if="o.state in ['draft','sent']">Quotation #</span>
                        <span t-field="o.name"/>
                    </h5>
                    <div t-if="o.date_approve" class="mw-100 mb-2">
                        <strong>PO Date:</strong>
                        <span class="m-0" t-field="o.date_approve"/>
                    </div>
                    <div t-if="o.origin" class="mw-100 mb-2">
                        <strong>Quotation Ref:</strong>
                        <span class="m-0" t-field="o.origin"/>
                    </div>

                    <div t-if="o.date_planned" class="mw-100 mb-2">
                        <strong>Quotation Date:</strong>
                        <span class="m-0" t-field="o.date_planned"/>
                    </div>
                    <div t-if="o.payment_term_id" class="mw-100 mb-2">
                        <strong>Payment Terms:</strong>
                        <span class="m-0" t-field="o.payment_term_id.name"/>
                    </div>
                    <div t-if="o.user_id" class="mw-100 mb-2">
                        <strong>Purchase Representative:</strong>
                        <p class="m-0" t-field="o.user_id"/>
                        <p class="m-0" t-field="o.user_id.partner_id.mobile"/>
                    </div>
                    <div t-if="o.transporter.name" class="mw-100 mb-2">
                        <strong>Transporter Name:</strong>
                        <span class="m-0" t-field="o.transporter.name"/>
                    </div>
                    <div t-if="o.transporter.mobile" class="mw-100 mb-2">
                        <strong>Transporter Number</strong>
                        <span class="m-0" t-field="o.transporter.mobile"/>
                    </div>
                </div>

            </div>
            <strong t-if="o.scope_of_work">Scope of Work:<span t-field="o.scope_of_work"/></strong>




            <div class="page">
                <div class="oe_structure"/>

                <table class="table table-sm o_main_table table-borderless" style="margin-top:30px;">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr>
                            <th  class="text-center" width="10%" name="th_serial">Sr.</th>
                            <th name="th_description" class="text-left">Description</th>
                            <th name="th_quantity" class="text-right">Quantity</th>
                            <th name="th_quantity" class="text-right">UOM</th>
                            <th name="th_priceunit" class="text-right">Unit Price</th>
                            <th name="th_taxes" class="text-right">VAT</th>
                            <th name="th_subtotal" class="text-right">Amount (OMR)</th>
                        </tr>
                    </thead>
                    <tbody class="purchase_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="sr" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-set="sr" t-value="sr+1"/>
                                <td class="text-center"><span t-esc="sr"/></td>
                                <t t-if="not line.display_type">
                                    <td name="td_name" class="text-center">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td name="td_quantity" class="text-center">
                                        <span t-field="line.product_qty"/>
                                    </td>
                                    <td name="td_quantity" class="text-center">
                                        <span t-field="line.product_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-center">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td name="td_taxes" class="text-center">
                                        <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-center">
                                        <span t-field="line.price_subtotal" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99" class="text-left">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto"
                             style="margin-left:560px;">
                            <table class="table table-borderless m-0" width="100%">
                                <tr class="border-black o_subtotal" style="">
                                    <td name="td_amount_untaxed_label">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td name="td_amount_untaxed" class="text-right">
                                        <span t-field="o.amount_untaxed" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </tr>
                                <tr style="">
                                    <t>
                                        <td name="td_amount_tax">Vat
                                            <span t-esc="round(o.order_line.taxes_id.amount)"/>%<br/>on
                                            <span t-field="o.amount_untaxed" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                        </td>
                                        <td name="td_amount_by_group_tax">
                                            <span t-field="o.amount_tax" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                        </td>
                                    </t>
                                </tr>
                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label">
                                        <strong>Total</strong>
                                    </td>
                                    <td name="td_amount_total" class="text-right">
                                        <span t-field="o.amount_total" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div align="left" style="page-break-inside: avoid;">
                    <strong t-if="o.notes" >GENERAL TERMS &amp; CONDITIONS</strong><p t-field="o.notes"/>
                    <strong><p t-if="o.inclusion" t-field="o.inclusion"/></strong>
                    <strong><p t-if="o.exclusion" t-field="o.exclusion"/></strong>
                </div>
            </div>
        </xpath>

    </template>

</odoo>
