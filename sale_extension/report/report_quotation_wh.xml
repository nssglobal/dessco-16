<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_quotation_wh_document" inherit_id="sale.report_saleorder_document">

        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
            </t>
            <div class="row" style="margin-bottom:50px">
                <div class="col-8">
                    <strong>Customer Details:</strong>
                    <!--                    <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing Address:</strong>-->
                    <div t-field="doc.partner_id"
                         t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;,&quot;name&quot;,  &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    <p t-if="doc.partner_id.vat">VAT IN:<span t-field="doc.partner_id.vat"/></p>
                    <p t-if="doc.partner_id.company_registry">C.R.<span t-field="doc.partner_id.company_registry"/></p>
                    <strong><span t-if="doc.partner_id.vat">Point of Contact:</span></strong><br></br>
                    <span t-if="doc.partner_id.vat">Name<span t-field="doc.partner_invoice_id.name"/></span><br></br>
                    <span t-if="doc.partner_id.vat">Number<span t-field="doc.partner_invoice_id.mobile"/></span><br></br>
                    <span t-if="doc.partner_id.vat">Email<span t-field="doc.partner_id.email"/></span>
                    <!--                    <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">-->
                    <!--                        <strong>Shipping Address:</strong>-->
                    <!--                        <div t-field="doc.partner_shipping_id"-->
                    <!--                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>-->
                    <!--                    </t>-->
                </div>
                <div class="col-4">
                    <h5>
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span t-if="doc.state not in ['draft','sent']">Sale Order #</span>
                            <span t-if="doc.state in ['draft','sent']">Quotation #</span>
                        </t>
<!--                        <t t-if="env.context.get('proforma', False) or is_pro_forma">-->
<!--                            <span>Invoice #</span>-->
<!--                        </t>-->
                        <span t-field="doc.name"/>
                    </h5>
                    <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="mw-100 mb-2">
                        <strong>Order Date:</strong>
                        <p class="m-0" t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.state in ['draft']" class="mw-100 mb-2">
                        <strong>Quotation Date:</strong>
                        <p class="m-0" t-field="doc.create_date"/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft','send']" name="expiration_date"
                         class="mw-100 mb-2">
                        <strong>Expiration:</strong>
                        <p class="m-0" t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.client_order_ref" class="mw-100 mb-2">
                        <strong>Customer Ref:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.client_order_ref" class="mw-100 mb-2">
                        <strong>PO Ref:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.user_id.name" class="mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                        <p class="m-0" t-field="doc.user_id.partner_id.mobile"/>
                        <!--                        <p class="m-0" t-field="doc.user_id.partner_id.email"/>-->
                    </div>
                </div>

            </div>
            <strong t-if="doc.scope_of_work"> Scope of Work:<span t-field="doc.scope_of_work"/></strong>

        </xpath>
        <xpath expr="//t[@t-set='information_block']" position="replace">
            <t t-set="information_block">

            </t>
        </xpath>
        <!--        <xpath expr="//div[@name='expiration_date']" position="replace">-->
        <!--        </xpath>-->

        <xpath expr="//div[hasclass('page')]" position="replace">

            <div class="page">
                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                <table class="table table-sm o_main_table table-borderless" style="margin-top:30px;">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr>
                            <th  class="text-center" width="10%" name="th_description">Sr.</th>
                            <th name="th_description" class="text-start">Description</th>
                            <th name="th_quantity" class="text-right">Quantity</th>
                            <th name="th_quantity" class="text-right">UOM</th>
                            <th name="th_priceunit" class="text-right">Unit Price</th>
                            <th name="th_discount" t-if="display_discount" class="text-right"
                                groups="product.group_discount_per_so_line">
                                <span>Disc.%</span>
                            </th>
                            <th name="th_taxes" class="text-right">VAT</th>
                            <th name="th_subtotal" class="text-right">Amount (OMR)</th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">

                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="sr" t-value="0"/>

                        <t t-foreach="doc.order_line" t-as="line">

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-set="sr" t-value="sr+1"/>
                                <td class="text-center"><span t-esc="sr"/></td>
                                <t t-if="not line.display_type">
                                    <td name="td_name" class="text-start">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td name="td_quantity" class="text-center">
                                        <span t-field="line.product_uom_qty"/>
                                    </td>
                                    <td name="td_quantity" class="text-center">
                                        <span t-field="line.product_uom"/>
                                    </td>
                                    <td name="td_priceunit" class="text-center">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-center"
                                        groups="product.group_discount_per_so_line">
                                        <span t-field="line.discount"/>
                                    </td>
                                    <td name="td_taxes" class="text-center">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                    </td>
                                    <td name="td_subtotal" class="text-center">
                                        <span t-field="line.price_subtotal" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td name="td_section_line" colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td name="td_note_line" colspan="99" class="text-start">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td name="td_section_subtotal" colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span t-esc="current_subtotal"
                                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto"
                             style="margin-left:560px;">
                            <table class="table table-borderless m-0" width="100%">
                                <tr class="border-black o_subtotal" style="">
                                    <td name="td_amount_untaxed_label">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td name="td_amount_untaxed" class="text-right">
                                        <span t-field="doc.amount_untaxed" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </tr>
                                <tr style="">
                                    <t>
                                        <td name="td_amount_tax">Vat
                                            <span t-esc="round(doc.order_line.tax_id.amount)"/>%<br/>on
                                            <span t-field="doc.amount_untaxed" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                        </td>
                                        <td name="td_amount_by_group_tax">
                                            <span t-field="doc.amount_tax" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                        </td>
                                    </t>
                                </tr>
                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label">
                                        <strong>Total</strong>
                                    </td>
                                    <td name="td_amount_total" class="text-right">
                                        <span t-field="doc.amount_total" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>


                <div t-if="doc.sale_order_option_ids and doc.state in ['draft', 'sent']">
                    <t t-set="has_option_discount" t-value="any(option.discount != 0.0 for option in doc.sale_order_option_ids)"/>
                    <h4 name="h_optional_products">
                        <span>Options</span>
                    </h4>
                    <table name="table_optional_products" class="table table-sm">
                        <thead>
                            <tr>
                                <th name="th_option_name" class="text-start">Description</th>
                                <th t-if="has_option_discount" name="th_option_discount" groups="product.group_discount_per_so_line" class="text-start">Disc.%</th>
                                <th name="th_option_price_unit" class="text-end">Unit Price</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <tr t-foreach="doc.sale_order_option_ids" t-as="option">
                                <td name="td_option_name">
                                    <span t-field="option.name"/>
                                </td>
                                <td t-if="has_option_discount" name="td_option_discount" groups="product.group_discount_per_so_line">
                                    <strong t-if="option.discount != 0.0" class="text-info">
                                        <t t-out="((option.discount % 1) and '%s' or '%d') % option.discount"/>%
                                    </strong>
                                </td>
                                <td name="td_option_price_unit">
                                    <strong class="text-end">
                                        <div t-field="option.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}" t-att-style="option.discount and 'text-decoration: line-through' or None" t-att-class="option.discount and 'text-danger' or None"/>
                                        <div t-if="option.discount">
                                            <t t-out="'%.2f' % ((1-option.discount / 100.0) * option.price_unit)"/>
                                        </div>
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <strong t-if="doc.note" >GENERAL TERMS &amp; CONDITIONS</strong><p name="order_note" t-field="doc.note"/>

                <!--                <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">-->
                <!--                    <div class="offset-8">-->
                <!--                        <strong>Signature</strong>-->
                <!--                    </div>-->
                <!--                    <div class="offset-8">-->
                <!--                        <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>-->
                <!--                    </div>-->
                <!--                    <div class="offset-8 text-center">-->
                <!--                        <p t-field="doc.signed_by"/>-->
                <!--                    </div>-->
                <!--                </div>-->

                <p t-if="doc.payment_term_id.note" >
                    <span t-field="doc.payment_term_id.note"/>
                </p>
                <strong><p t-if="doc.inclusion" t-field="doc.inclusion"/></strong>
                <strong><p t-if="doc.exclusion" t-field="doc.exclusion"/></strong>


<!--                <div t-if="doc.state not in ['draft']" class="mw-100 mb-2">-->
<!--                    <div class="row">-->
<!--                        <div class="col-7">-->
<!--                            <div style="text-align: left;">-->
<!--                                <strong>Account Name: Dhofar Environmental Safety Service CO LLC</strong>-->
<!--                            </div>-->
<!--                            <div style="text-align: left;">-->
