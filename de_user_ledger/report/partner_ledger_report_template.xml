<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="de_partner_ledger_pdf_report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <div class="page">
                    <div class="text-center">
                        <h3 class="text-center">Cost Category Summary </h3>

                        <p><span t-esc="data['start_date']" t-options="{'widget': 'date'}"/>  <strong> To </strong><span t-esc="data['end_date']" t-options="{'widget': 'date'}"/></p>
                    </div>
                </div>
                <table class="table table-sm" name="account_lines_table">

                    <tr style="border:1px solid black;">
                        <td style="border:1px solid black;" class="text-left"><strong>Particulars</strong></td>
                        <td style="border:1px solid black;" class="text-center"><strong>Debit</strong></td>
                        <td style="border:1px solid black;" class="text-center"><strong>Credit</strong></td>
                        <td style="border:1px solid black;border-top:none;" class="text-center"><strong>Balance</strong></td>

                    </tr>
                    <tbody>

                        <tr t-foreach="users" t-as="user" style="font-size: 13px;" >
                           <t t-set="debit" t-value="get_user_debit(user)"/>
                            <t t-set="credit" t-value="get_user_credit(user)"/>
                            <td style="border:none;" class="text-left"><span t-esc="user.name"/></td>

                            <td style="text-align:right;border:none;" ><t t-esc="'{0:,.2f}'.format(debit)"/></td>
                            <td style="text-align:right;border:none;"><t t-esc="'{0:,.2f}'.format(credit)"/></td>
                            <td style="text-align:right;border:none;"><t t-esc="'{0:,.2f}'.format(debit-credit)"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </t>

    </template>
</odoo>
