<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

   <record id="paperformat_partner_ledger"
           model="report.paperformat">
      <field name="name">Partner Ledger A4</field>
      <field name="default" eval="True"/>
      <field name="format">A4</field>
      <field name="page_height">0</field>
      <field name="page_width">0</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">65</field>
      <field name="margin_bottom">28</field>
      <field name="margin_left">5</field>
      <field name="margin_right">5</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">60</field>
      <field name="dpi">90</field>
   </record>

   <record id="partner_ledger_pdf" model="ir.actions.report">
      <field name="name">Salesman Wise Report</field>
      <field name="model">partner.ledger</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">de_user_ledger.de_partner_ledger_pdf_report</field>
      <field name="report_file">de_user_ledger.de_partner_ledger_pdf_report</field>
<!--      <field name="print_report_name">(object._get_report_base_filename())</field>-->
      <field name="binding_model_id" ref="de_user_ledger.model_partner_ledger"/>
      <field name="binding_type">report</field>
      <field name="paperformat_id" ref="paperformat_partner_ledger"/>
   </record>

