<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record model='ir.ui.view' id='view_move_form_inherit'>
	        <field name="name">view_move_form_inherit</field>
	        <field name="model">account.move</field>
	        <field name="inherit_id" ref="account.view_move_form"/>
	        <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
			<field name="do_number" attrs="{'invisible': [('move_type', '=', 'entry')]}"/>
                    <field name="do_date" attrs="{'invisible': [('move_type', '=', 'entry')]}"/>
                    <field name="lpo_number" attrs="{'invisible': [('move_type', '=', 'entry')]}"/>
                    <field name="lpo_date" attrs="{'invisible': [('move_type', '=', 'entry')]}"/>
                </xpath>
                    <xpath expr="//field[@name='narration']" position="after">
                   <field colspan="2" name="scope_of_work" nolabel="1" placeholder="Scope of Work..."/>

                </xpath>
            </field>
	    </record>
</odoo>
