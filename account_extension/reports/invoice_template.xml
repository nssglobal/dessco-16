<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="invoice_template" inherit_id="account.report_invoice_document">
        <xpath expr="//div[hasclass('row')]" position="replace">
                  <div align="center">
           <h4> TAX Invoice</h4>
                </div>
        </xpath>



        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="row" style="margin-bottom:50px">
                <div class="col-8">
                    <strong>Customer Details:</strong>
                    <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;,&quot;name&quot;,  &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                   <t t-if="o.partner_id.vat">  <strong> VAT IN: </strong><span t-field="o.partner_id.vat"/><br/></t>
                    <t t-if="o.partner_id.company_registry">    <strong>C.R. </strong><span t-field="o.partner_id.company_registry"/><br/></t>
                    <t t-if="o.partner_shipping_id">    <strong><span>Point of Contact: </span></strong><br/></t>
                    <t t-if="o.partner_shipping_id">    <strong>Name: </strong><span t-field="o.partner_shipping_id.name"/><br/></t>
                    <t t-if="o.partner_shipping_id.mobile"> <strong>Mobile: </strong><span t-field="o.partner_shipping_id.mobile"/><br/></t>
                    <t t-if="o.partner_shipping_id.email">  <strong>Email: </strong><span t-field="o.partner_shipping_id.email"/></t>
                </div>
                <div class="col-4">
                    <h5 t-if="o.state not in ['draft','sent']">
                        <span >Invoice #</span>
                        <span t-field="o.name"/>
                    </h5>
                    <div t-if="o.invoice_date" class="mw-100 mb-2">
                        <strong>Invoice Date: </strong>
                        <span class="m-0" t-field="o.invoice_date"/>
                    </div>
                    <div t-if="o.ref" class="mw-100 mb-2">
                        <strong>Purchase Order # </strong>
                        <span class="m-0" t-field="o.ref"/>
                    </div>

                    <div t-if="o.invoice_origin" class="mw-100 mb-2">
                        <strong>Quotation # </strong>
                        <span class="m-0" t-field="o.invoice_origin"/>
                    </div>
                    <div t-if="o.do_number" class="mw-100 mb-2">
                        <strong>Delivery Order # </strong>
                        <span class="m-0" t-field="o.do_number"/>
                    </div>
                       <div t-if="o.lpo_number" class="mw-100 mb-2">
                        <strong>LPO # </strong>
                        <span class="m-0" t-field="o.lpo_number"/>
                    </div>
                          <div t-if="o.lpo_date" class="mw-100 mb-2">
                        <strong>LPO Date </strong>
                        <span class="m-0" t-field="o.lpo_date"/>
                    </div>
                    <div t-if="o.invoice_user_id" class="mw-100 mb-2">
                        <strong>Salesperson: </strong>
                        <span class="m-0" t-field="o.invoice_user_id"/><br></br>
                         <t t-if="o.invoice_user_id.partner_id.mobile"> <strong>Mobile: </strong><span class="m-0" t-field="o.invoice_user_id.partner_id.mobile"/><br></br></t>
                         <t t-if="o.partner_id.company_registry"> <strong>Email: </strong><span class="m-0" t-field="o.invoice_user_id.partner_id.email"/><br></br></t>
            
                    </div>
                </div>

            </div>
            <strong t-if="o.scope_of_work">Scope of Work: <span t-field="o.scope_of_work"/></strong>


            <div class="page">
                <table class="table table-sm o_main_table table-borderless">
                    <thead>
                        <tr>
                            <th name="th_serial"  width="10%" class="text-left">Sr.</th>
                            <th name="th_description"  width="50%" class="text-start">Description</th>
                            <th name="th_quantity" class="text-right">Quantity</th>
                            <th name="th_priceunit" class="text-right">Unit Price</th>
                            <!--                                 <th name="th_discount" t-if="display_discount" class="text-right" -->
                            <!--                                     groups="product.group_discount_per_so_line"> -->
                            <!--                                     <span>Disc.%</span> -->
                            <!--                                 </th> -->
                            <!--                             <th name="th_taxes" class="text-right">VAT</th>-->
                            <th name="th_subtotal" class="text-right">
                                <span >Amount (OMR)</span>
                                <!--                                <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>-->
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="sr" t-value="0"/>
                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                            <tr>
                                <t t-set="sr" t-value="sr+1"/>
                                <td class="text-center"><span t-esc="sr"/></td>
                            
                                    <td name="td_name" class="text-left">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td name="td_quantity" class="text-center">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td name="td_priceunit" class="text-center">
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td name="td_subtotal" class="text-center">
                                        <span t-field="line.price_subtotal" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}' />

                                    </td>
                            
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div align="right" name="so_total_summary">
                    <div id="total" class="row" name="total">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto" style="margin-left:560px;">
                            <table class="table table-sm" width="100%">
                                <tr class="border-black o_subtotal" style="">
                                    <td name="td_amount_untaxed_label">
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td name="td_amount_untaxed" class="text-right">
                                        <span t-field="o.amount_untaxed" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                                    </td>
                                </tr>
                                <tr style="">
                                    <t>
                                        <td name="td_amount_tax">
                                            Vat
                                            <span t-esc="round(o.invoice_line_ids.tax_ids.amount)" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                                            %
                                    
                                        </td>
                                        <td name="td_amount_by_group_tax">
                                            <span t-field="o.amount_tax" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                                        </td>
                                    </t>
                                </tr>
                                <tr class="border-black o_total">
                                    <td name="td_amount_total_label">
                                        <strong>Total</strong>
                                    </td>
                                    <td name="td_amount_total" class="text-right">
                                        <span t-field="o.amount_total" t-options='{"widget": "float", "decimal_precision":"Product Unit of Measure"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>











<!--                 <div align="left" style="page-break-inside: avoid;"> -->
<!--                     <strong t-if="o.narration" >GENERAL TERMS &amp; CONDITIONS</strong><p t-field="o.narration"/><br></br><br></br> -->
                      <p t-if="o.invoice_payment_term_id.name">
                        <strong>Payment Terms</strong>
                        <span t-field="o.invoice_payment_term_id.name"/></p>

                    <strong>Account Name:  <span t-field="o.partner_bank_id.partner_id.name"/></strong><br></br>
                    <strong>Account Number:<span t-field="o.partner_bank_id.acc_number"/></strong><br></br>
                    <strong>Bank Name:<span t-field="o.partner_bank_id.bank_id.name"/></strong><br></br>
                    <strong>SwiftCode/IBAN<span t-field="o.partner_bank_id.bank_id.bic"/></strong><br></br>
                   

                                
                    <p id="fiscal_position_remark" t-if="o.invoice_incoterm_id">
                        <strong>Incoterms</strong>
                        <span t-field="o.invoice_incoterm_id.name"/>
                    </p><br></br><br></br><br></br>
<!--                       </div> -->
                
                <div class="row">
                    <div class="col-8">

                    <strong>Receivers Details</strong><br></br>
                    <strong><span>Name: </span></strong><br></br>
                    <strong><span>Mobile: </span></strong><br></br>
                    <strong><span>Email: </span></strong><br></br>
                    <strong><span>Date: </span></strong><br></br><br></br><br></br><br></br>
                   <strong><span>Signature and Stamp</span></strong>
                        </div>
<!--                     <div class="col-5">
                    <strong>Submitted By</strong><br></br>
                    <strong><span>Name: </span></strong> <span t-esc="o.create_uid.partner_id.name"/><br></br>
                    <strong><span>Mobile: </span></strong><span t-esc="o.create_uid.partner_id.mobile"/><br></br>
                    <strong><span>Email: </span></strong><span t-esc="o.create_uid.partner_id.email"/><br></br>
                    <strong><span>Date: </span></strong><span t-esc="o.invoice_date"/><br></br><br></br><br></br><br></br>
                   <strong> <span>Signature and Stamp</span></strong>

                </div> -->
            </div>
                   </div>
        </xpath>

        <xpath expr="//p[@name='payment_communication']" position="replace">

        </xpath>
        <xpath expr="//div[@name='payment_term']" position="replace">

        </xpath>

        <xpath expr="//div[@name='comment']" position="replace">

        </xpath>

        <xpath expr="//p[@name='note']" position="replace">

        </xpath>

        <xpath expr="//p[@name='incoterm']" position="replace">

        </xpath>

        <xpath expr="//div[@id='qrcode']" position="replace">

        </xpath>

    </template>


</odoo>
