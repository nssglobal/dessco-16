                    <p t-if="o.partner_id.vat">VAT IN:
                        <span t-field="o.partner_id.vat"/>
                    </p>
<!--                     <strong><span t-if="o.partner_id.vat">Point of Contact:</span></strong><br></br>
                    <span t-if="o.partner_id.vat">Name</span><br></br>
                    <span t-if="o.partner_id.vat">Number</span><br></br>
                    <span t-if="o.partner_id.vat">Email</span> -->
                </div>
                <div class="col-4">
                    <div  class="mw-100 mb-2">
                        <strong>Delivery Order #</strong>
                        <span class="m-0" t-field="o.name"/>
                    </div>
                    <div t-if="o.state" name="div_sched_date" class="mw-100 mb-2">
                        <strong>DO Date:</strong>
                        <t t-if="o.state == 'done'">
                            <span class="m-0" t-field="o.date_done"/>
                        </t>
                    </div>
                    <div t-if="o.so_id" name="div_po_ref" class="mw-100 mb-2">
                        <strong>Purchase Order #</strong>
                        <span class="m-0" t-field="o.so_id.client_order_ref"/>
                    </div>
                    <div t-if="o.origin" class="mw-100 mb-2">
                        <strong>Quotation #</strong>
                        <t t-if="o.origin">
                            <span class="m-0" t-field="o.origin"/>
                        </t>
                    </div>
                    <div t-if="o.so_id.order_line.invoice_lines" class="mw-100 mb-2">
                        <strong>Invoice #</strong>
                        <t t-if="o.origin">
                            <span class="m-0" t-field="o.so_id.order_line.invoice_lines.move_id.name"/>
                        </t>
                    </div>
                    <div t-if="o.so_id.user_id.name" class="mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="o.so_id.user_id"/>
                        <p class="m-0" t-field="o.so_id.user_id.partner_id.mobile"/>
                    </div>
                </div>
            </div>
        </xpath>
